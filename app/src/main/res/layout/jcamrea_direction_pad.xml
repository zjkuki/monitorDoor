<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamUp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzup_selector">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamLeft"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzleft_selector">
        </ImageButton>

        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnLocker"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_btn_locker">
        </ImageButton>

        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamRight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzright_selector">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamDown"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzdown_selector">
        </ImageButton>
    </LinearLayout>

</LinearLayout>
