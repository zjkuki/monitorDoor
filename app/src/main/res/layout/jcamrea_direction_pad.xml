<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamUp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzup_selector">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamLeft"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzleft_selector">
        </ImageButton>

        <RelativeLayout
            android:id="@+id/VoiceTalk_jcdp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/cb_double_talk_switch"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent">

            <Button
                android:id="@+id/Btn_Talk_Switch_jcdp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Open TalkChannel"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/btnVoiceTalk_jcdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/icon_voice_talk"
                android:scaleType="fitCenter"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/btn_quit_voice_jcbp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="@color/transparent"
                    android:src="@drawable/icon_close" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamRight"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzright_selector">
        </ImageButton>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageButton
            android:layout_margin="0dp"
            android:id="@+id/btnCamDown"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ptzdown_selector">
        </ImageButton>
    </LinearLayout>

</LinearLayout>
